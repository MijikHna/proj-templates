  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App node",
      "program": "${workspaceFolder}/build/main.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "sourceMaps": true
    },
    {
      "type": "ts-node",
      "request": "launch",
      "name": "Launch App ts-node",
      "program": "main.ts",
      "args": ["--require", "ts-node/register"]
      // "outFiles": ["${workspaceFolder}/build/**/*.js"],
      // "sourceMaps": true
    }
  ]
}
